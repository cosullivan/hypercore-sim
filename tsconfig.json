{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": ["hardhat"],
    "resolveJsonModule": true
  },
  "include": ["hardhat.config.ts", "scripts"],
  "exclude": ["node_modules"]
}
